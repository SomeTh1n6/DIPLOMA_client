<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.note.NoteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:screenOrientation="portrait"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Запись к специалисту"
            android:gravity="center"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#5B78EB"
            android:layout_marginBottom="20dp">

        </TextView>

        <Spinner
            android:id="@+id/choose_city_spinner"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="none"
            style="@style/spinner_style">

        </Spinner>

        <Spinner
            android:id="@+id/choose_specialization_spinner"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="none"
            style="@style/spinner_style">

        </Spinner>

        <Spinner
            android:id="@+id/choose_date_spinner"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="none"
            style="@style/spinner_style">

        </Spinner>

        <Spinner
            android:id="@+id/choose_time_spinner"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="none"
            style="@style/spinner_style">

        </Spinner>

        <Button
            android:id="@+id/next_button"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:text="Оставить заявку"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/main_design_button"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="7dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/subtract"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/background_reverse" />
    </LinearLayout>


</RelativeLayout>