<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account.AccountFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:screenOrientation="portrait"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:background="@null"
            android:src="@drawable/account_logo" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/enter_name"
            android:textColorHint="#A4B3EE"
            android:theme="@style/EditTextThemeOverlay">

            <EditText
                android:id="@+id/enter_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#5B78EB"
                android:hint="Имя"
                android:autofillHints="username"
                android:inputType="text"
                android:text="-"
                android:textColor="#5B78EB"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/enter_city"
            android:textColorHint="#A4B3EE"
            android:theme="@style/EditTextThemeOverlay">

            <EditText
                android:id="@+id/enter_city_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#5B78EB"
                android:hint="Город проживания"
                android:autofillHints="username"
                android:inputType="text"
                android:text="-"
                android:textColor="#5B78EB"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/enter_number"
            android:textColorHint="#A4B3EE"
            android:theme="@style/EditTextThemeOverlay">

            <EditText
                android:id="@+id/enter_number_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#5B78EB"
                android:hint="Номер телефона"
                android:autofillHints="phone"
                android:inputType="text"
                android:text="-"
                android:textColor="#5B78EB"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/enter_mail"
            android:textColorHint="#A4B3EE"
            android:theme="@style/EditTextThemeOverlay">

            <EditText
                android:id="@+id/enter_mail_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#5B78EB"
                android:hint="Электронная почта"
                android:autofillHints="phone"
                android:inputType="text"
                android:text="alexander@mail.ru"
                android:textColor="#5B78EB"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/change_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Изменить"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/main_design_button"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="7dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/subtract"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/background_reverse" />
    </LinearLayout>




</RelativeLayout>