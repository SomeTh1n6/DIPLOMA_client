<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/selected_age_sections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="6dp"
            android:textColor="#616470"
            android:textSize="15sp"
            android:text="0-3 лет"
            android:gravity="center"/>

        <TextView
            android:id="@+id/sections_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="6dp"
            android:gravity="center"
            android:textColor="#5B78EB"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            android:text="Разделы" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/leading_activity"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:background="@drawable/border_sections"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="20dp"
                android:text="Ведущая деятельность"
                android:textColor="#485EB8"
                android:textStyle="bold"
                android:layout_marginBottom="20dp">

            </TextView>

            <TextView
                android:id="@+id/important"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:background="@drawable/border_sections"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="20dp"
                android:text="Важно знать"
                android:textColor="#485EB8"
                android:textStyle="bold"
                android:layout_marginBottom="20dp">

            </TextView>

            <TextView
            android:id="@+id/game"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:background="@drawable/border_sections"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="20dp"
            android:text="Игры,  игрушки, увлечения"
            android:textColor="#485EB8"
            android:textStyle="bold"
            android:layout_marginBottom="20dp">


        </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="20dp">

            <TextView
                android:id="@+id/physical"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:background="@drawable/border_sections"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="20dp"
                android:text="Физическое развитие"
                android:textColor="#485EB8"
                android:textStyle="bold"
                android:layout_marginBottom="20dp">

            </TextView>

            <TextView
                android:id="@+id/ages"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:background="@drawable/border_sections"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="20dp"
                android:text="Возрастные особенности"
                android:textColor="#485EB8"
                android:textStyle="bold"
                android:layout_marginBottom="20dp">

            </TextView>

            <TextView
                android:id="@+id/crises"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:background="@drawable/border_sections"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:padding="20dp"
                android:text="Кризисы"
                android:textColor="#485EB8"
                android:textStyle="bold"
                android:layout_marginBottom="20dp">

            </TextView>



        </LinearLayout>

    </LinearLayout>

        <ImageButton
            android:id="@+id/back_button_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_second"
            android:layout_marginTop="60dp"
            android:background="@null"
            android:layout_gravity="center"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:id="@+id/subtract"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="bottom"
            android:background="@drawable/background_reverse"
            />

    </LinearLayout>


</RelativeLayout>